package com.springcore.springcore2.lifecycle;

import org.springframework.context.ApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;

public class Test {
	public static void main(String[] args) {
		ApplicationContext context = new ClassPathXmlApplicationContext("com/springcore/springcore2/lifecycle/config.xml");
		Samosa s1 = (Samosa) context.getBean("samosa1");
		System.out.println(s1);
	}
	
	public void init() {
		System.out.println("Instantiating a bean with the init method");
	}
	
	public void destroy() {
		System.out.println("Destroy a bean with the destroy method");
	}
}
